<?xml version="1.0"?>

<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links" remove="1"/>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="cms.block.halloween.banner">
                <arguments>
                    <argument name="block_id" xsi:type="string">halloween_banner</argument>
                </arguments>
            </block>
            <container name="recently.viewed.container" after="-" label="Recently Viewed Container XXXXX">
                <block class="Magento\Framework\View\Element\Template" template="Magento_Theme::recently.phtml"/>
                <!--<block class="Magento\Catalog\Block\Widget\RecentlyViewed" name="demoBlock" template="product/widget/viewed/grid.phtml">
                    <action method="setData">
                        <argument name="page_size" xsi:type="string">5</argument>
                        <argument name="show_attributes" xsi:type="string">name,image,price</argument>
                        <argument name="show_buttons" xsi:type="string">add_to_cart</argument>
                        <argument name="template" xsi:type="string">product/widget/viewed/grid.phtml</argument>
                    </action>
                </block>-->
            </container>
        </referenceContainer>


        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="cms.block.footer.link">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer_link</argument>
                </arguments>
            </block>
        </referenceContainer>



    </body>
</page>


